    <!-- Sliders din√°micos por categor√≠a desde MongoDB -->
<% if (Object.keys(noticiasPorCategoria).length === 0) { %>
    <p class="mensaje-error">‚ö†Ô∏è No se pudieron cargar las noticias din√°micas.</p>
<% } else { %>
    <% for (let categoria in noticiasPorCategoria) { %>
