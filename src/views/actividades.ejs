  <link rel="stylesheet" href="../css/footer.css">
  <link rel="stylesheet" href="../css/actividades.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet">
  <link href='https://cdn.boxicons.com/fonts/basic/boxicons.min.css' rel='stylesheet'>
</head>

<body>
  <!-- Header -->
  <header class="header" id="header">
    <div class="logo">
      <h1>Tamarindo Tech</h1>
    </div>
    <input type="checkbox" id="check">
    <label for="check" class="btn">☰</label>

    <nav class="Links_Header" id="Links_Header">
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="noticias">Anuncios/Noticias</a></li>
        <li><a href="emprendimientos">Emprendimientos</a></li>
        <li><a href="Transportes">Transporte</a></li>
        <li><a href="actividades">Actividades</a></li>
        <button class="boton_sing_out" id="boton_sing_out"><a href="/logout">Cerrar Sesion</a></button>
      </ul>
    </nav>
  </header>
  <!-- fin de header -->


  <!-- Hero -->
  <div class="main-content Contenido">
    <section class="Bienvenido" id="Bienvenido">
      <div class="contenedor">
        <div class="texto_bienvenido">
          <h1 class="titulo">Actividades</h1>
          <p>Descubre todas las iniciativas locales diseñadas para enriquecer tu tiempo libre y fortalecer lazos en la
            comunidad. Desde caminatas guiadas, talleres de emprendimiento, hasta encuentros culturales, te invitamos a
            participar activamente. Consulta el calendario para no perderte ningún evento y mantente al tanto de nuevas
            oportunidades.</p>

        </div>

          <%
              // Primer día del mes
              const primerDia = new Date(anioActual, mesActual - 1, 1);
              // Último día del mes
              const ultimoDia = new Date(anioActual, mesActual, 0);
              // Día de la semana del primer día (0=Domingo, 6=Sábado)
              const primerDiaSemana = primerDia.getDay();
              // Total de días del mes
              const totalDias = ultimoDia.getDate();
          %>
          <div class="calendario-principal">
            <div class="encabezado-calendario">
              <h3>
                <%= nombreMesActual %>
                  <%= anioActual %>
              </h3>
            </div>
            <div class="dias-semana">
              <span>Dom</span><span>Lun</span><span>Mar</span><span>Mié</span><span>Jue</span><span>Vie</span><span>Sáb</span>
            </div>
            <div class="dias">
              <% // Espacios vacíos antes del primer día %>
                <% for(let i=0; i < primerDiaSemana; i++) { %>
                  <span></span>
                  <% } %>
                    <% // Días del mes %>
                      <% for(let dia=1; dia <=totalDias; dia++) { const
                        fechaStr=`${anioActual}-${mesActual.toString().padStart(2, '0'
                        )}-${dia.toString().padStart(2, '0' )}`; %>
                        <% const actividadesDelDia = actividades.filter(actividad => actividad.fecha === fechaStr); %>
                        <span class="dia  <%= actividadesDelDia.length > 0 ? 'activo' : '' %>" data-dia="<%= fechaStr %>">
                          <%= dia %>
                        </span>
                <% } %>
            </div>
          </div>

      </div>


    </section>


    <!-- Tarjetas de actividades -->
    <div class="Contenido">
      <div class="contenedor-tarjetas">

        <% actividades.forEach((actividad, index)=> {
          const idSeguro = `modal-actividad-${index}`;
          %>
          <div class="tarjeta" data-titulo="<%= actividad.titulo.trim() %>">
            <img src="/img/<%= actividad.nombreImagen %>" alt="<%= actividad.titulo %>" />
            <h3>
              <%= actividad.titulo %>
            </h3>
            <p>
              <%= actividad.fecha %>
            </p>
            <button class="boton-informacion" data-modal-id="<%= idSeguro %>">Más información</button>
          </div>

          <div id="<%= idSeguro %>" class="modal">
            <div class="modal-contenido">
              <span class="cerrar" data-modal-id="<%= idSeguro %>">&times;</span>
              <h3>
                <%= actividad.titulo %>
              </h3>
              <p>
                <%= actividad.descripcion_actividad %>
              </p>
              <ul>
                <li><strong>Recomendaciones:</strong>
                  <%= actividad.recomendaciones_actividad %>
                </li>
                <li><strong>Fecha:</strong>
                  <%= actividad.fecha %>
                </li>
                <li><strong>Duración:</strong>
                  <%= actividad.duracion %> (h)
                </li>
                <li><strong>Hora:</strong>
                  <%= actividad.hora %>
                </li>

              </ul>
            </div>
          </div>
          <% }) %>

            <!-- ↑↑↑ FIN DE TARJETAS ↑↑↑ -->
      </div>
    </div>
  </div>
  <div id="modal-actividades" class="modal">
    <div class="modal-contenido2">
      <h2>Actividades del día</h2>
      <div id="contenido-modal" class="contenedor-tarjetas"></div>
      <button id="cerrar-modal" class="btn-cerrar">Cerrar</button>
    </div>
  </div>

  <div id="cerrar"></div>
  <script src="/js/actividades.js"></script>


  <!-- Inicio de Footer -->
  <footer class="footer">
    <div class="footer-contenedor">
      <div class="footer-contenido">
        <!-- Columna 1: Logo y redes sociales -->
        <div class="footer-section">
          <h3>Nunciatura</h3>
          <div class="social-icons">
            <!-- Twitter/X -->
            <a href="#" aria-label="Twitter">
