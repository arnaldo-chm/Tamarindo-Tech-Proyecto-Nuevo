<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emprendimientoss</title>
    <link rel="stylesheet" href="../css/emprendimientos.css">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/footer.css">
    <!-- Link preconnect para Google fonts con la opción de Roboto como fuente de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header class="header" id="header">
        <div class="logo">
            <h1>Logo</h1>
        </div>

        <input type="checkbox" id="check">
        <label for="check" class="btn">☰</label>

        <nav class="Links_Header" id="Links_Header">
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="noticias">Anuncios/Noticias</a></li>
                <li><a href="emprendimientos">Emprendimientos</a></li>
                <li><a href="Transportes">Transporte</a></li>
                <li><a href="actividades">Actividades</a></li>
                <button class="boton_sing_out" id="boton_sing_out"><a href="/logout">Cerrar Sesion</a></button>
            </ul>
        </nav>
    </header>
    <!-- fin de header -->
    <!-- Emprendimientos -->
    <div class="Contenido">
        <section class="Encabezado" id="Encabezado"> <!-- Encabezado -->
            <div class="contenedor_encabezado" id="contenedor_encabezado">
                <div class="img_encabezado_emprendimientos" id="img_encabezado_emprendimientos">
                    <img src="/img/Emprendimiento-Imagen-Principal.png" alt="Emprendimientos">
                </div>
                <div class="texto_encabezado_emprendimientos" id="texto_encabezado_emprendimientos">
                    <h1>¿Tienes un emprendimiento?</h1>
                    <p class="info_general">¡Haz crecer tu emprendimiento con nuestra plataforma!</p>
                    <p class="info_general">Publica tu negocio, comparte eventos, promociona ofertas especiales y
                        conecta con más clientes.</p>
                    <button class="boton_crear_emprendimiento" id="boton_crear_emprendimiento"><a
                            href="crear_emprendimiento">Publicar emprendimiento </a></button>
                    <p>Comunicate con el administrador si tienes dudas. </p>
                </div>
            </div>
        </section> <!-- fin de Encabezado -->

        <section class="Emprendimientos" id="Emprendimientos"> <!-- Emprendimientos -->

            <h2 class="titulo_emprendimientos" id="titulo_emprendimientos">Emprendimientos de la zona</h2>
            <div class="contenedor-emprendimientos" id="contenedor-emprendimientos">
                
                <div class="card" id="emprendimiento">
                    <img src="/img/empredimientos1.jpg" class="img_emprendimiento" id="emprendimiento"
                        alt="sazones" />
                    <h3 class="producto" id="producto">Rústica Sazón</h3>
                    <p class="descripcion_emprendimiento" id="descripcion_emprendimiento">Rústica Sazón tenemos una
                        variedad de productos artesanales y veganos, libres de proteína animal y gluten como
                        mayonesas en variedad de sabores</p>
                    <p class="precio_emprendimiento" id="precio_emprendimiento">$100</p>
                    <p class="numero_emprendimiento" id="numero_emprendimiento">88963245</p>
                    <p class="categoria_emprendimiento" id="categoria_emprendimiento">Salud</p>
                </div>                

                <% emprendimientos.forEach(emprendimiento=>{ %>

                    
                    <div class="card" id="emprendimiento">
                        <img src="/img/<%= emprendimiento.nombreImagen %>" class="img_emprendimiento"
                            id="emprendimiento" alt="" />
                        <h3 class="producto" id="producto">
                            <%= emprendimiento.nombreEmprendimiento %>
                        </h3>
                        <p class="descripcion_emprendimiento" id="descripcion_emprendimiento">
                            <%= emprendimiento.descripcionEmprendimiento %>
                        </p>
                        <p class="precio_emprendimiento" id="precio_emprendimiento">$<%= emprendimiento.precio %>
                        </p>
                        <p class="numero_emprendimiento" id="numero_emprendimiento">
                            <%= emprendimiento.telefono %>
                        </p>
                        <p class="categoria_emprendimiento" id="categoria_emprendimiento">
                            <%= emprendimiento.categoria %>
                        </p>
                    </div>
                    

                <% }) %>

            </div>
        </section>

        <% if ((emprendimientosUsuario && emprendimientosUsuario.length>0) || (emprendimientosPendientesUsuario && emprendimientosPendientesUsuario.length>0)) { %>
            <section class="Emprendimientos" id="Emprendimientos">
                <h2 class="titulo_emprendimientos" id="titulo_emprendimientos">Mis Emprendimientos</h2>
                <div class="contenedor-emprendimientos" id="contenedor-emprendimientos">

                    <% if (emprendimientosPendientesUsuario && emprendimientosPendientesUsuario.length > 0) { %>
                        <% emprendimientosPendientesUsuario.forEach(emprendimientoPersonalPendiente=>{ %>
                            <div class="card" id="emprendimiento">
                                <img src="/img/<%= emprendimientoPersonalPendiente.nombreImagen %>" class="img_emprendimiento"
                                    id="emprendimiento" alt="" />
                                <h3 class="producto" id="producto">
                                    <%= emprendimientoPersonalPendiente.nombreEmprendimiento %>
                                </h3>
                                <p class="descripcion_emprendimiento" id="descripcion_emprendimiento">
                                    <%= emprendimientoPersonalPendiente.descripcionEmprendimiento %>
                                </p>
                                <p class="precio_emprendimiento" id="precio_emprendimiento">$<%= emprendimientoPersonalPendiente.precio %>
                                </p>
                                <p class="numero_emprendimiento" id="numero_emprendimiento">
                                    <%= emprendimientoPersonalPendiente.telefono %>
                                </p>
                                <p class="categoria_emprendimiento" id="categoria_emprendimiento">
                                    <%= emprendimientoPersonalPendiente.categoria %>
                                </p>
                                <p class="estado_emprendimiento" id="estado_emprendimiento">
                                    <%= emprendimientoPersonalPendiente.estadoEmprendimiento %>
                                </p>
                                <% if (emprendimientoPersonalPendiente.estadoEmprendimiento === 'Rechazado' && emprendimientoPersonalPendiente.motivoRechazo) { %>
                                    <div class="motivo-rechazo">
                                        <strong>Motivo:</strong> <%= emprendimientoPersonalPendiente.motivoRechazo %>
                                    </div>
                                <% } %>
                                <div class="acciones-tarjeta">
                                    <% if (emprendimientoPersonalPendiente.estadoEmprendimiento === 'Pendiente' || !emprendimientoPersonalPendiente.estadoEmprendimiento) { %>
                                        <span style="color:#f39c12;font-weight:bold;">Pendiente de aprobación</span>
                                    <% } else if (emprendimientoPersonalPendiente.estadoEmprendimiento === 'Rechazado') { %>
                                        <form action="/emprendimientoPendiente/<%= emprendimientoPersonalPendiente._id %>/eliminar" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este emprendimiento?');">
                                            <button class="btn-eliminar" type="submit">Eliminar</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>

                    <% if (emprendimientosUsuario && emprendimientosUsuario.length > 0) { %>
                        <% emprendimientosUsuario.forEach(emprendimientoPersonal=>{ %>
                            <div class="card" id="emprendimiento">
                                <img src="/img/<%= emprendimientoPersonal.nombreImagen %>" class="img_emprendimiento"
                                    id="emprendimiento" alt="" />
                                <h3 class="producto" id="producto">
                                    <%= emprendimientoPersonal.nombreEmprendimiento %>
                                </h3>
                                <p class="descripcion_emprendimiento" id="descripcion_emprendimiento">
                                    <%= emprendimientoPersonal.descripcionEmprendimiento %>
                                </p>
                                <p class="precio_emprendimiento" id="precio_emprendimiento">$<%= emprendimientoPersonal.precio %>
                                </p>
                                <p class="numero_emprendimiento" id="numero_emprendimiento">
                                    <%= emprendimientoPersonal.telefono %>
                                </p>
                                <p class="categoria_emprendimiento" id="categoria_emprendimiento">
                                    <%= emprendimientoPersonal.categoria %>
                                </p>
                                <p class="estado_emprendimiento" id="estado_emprendimiento">
                                    <%= emprendimientoPersonal.estadoEmprendimiento %>
                                </p>
                                <% if (emprendimientoPersonal.estadoEmprendimiento === 'Rechazado' && emprendimientoPersonal.motivoRechazo) { %>
                                    <div class="motivo-rechazo">
                                        <strong>Motivo:</strong> <%= emprendimientoPersonal.motivoRechazo %>
                                    </div>
                                <% } %>
                                <div class="acciones-tarjeta">
                                    <a href="/emprendimiento/<%= emprendimientoPersonal._id %>/editar">
                                        <button class="btn-editar" type="button">Editar</button>
                                    </a>
                                    <form action="/emprendimiento/<%= emprendimientoPersonal._id %>/eliminar" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este emprendimiento?');">
                                        <button class="btn-eliminar" type="submit">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>

                </div>
            </section>
        <% } %>

    </div><!-- fin de Emprendimientos -->

    <!-- footer -->
    <footer class="footer">
        <div class="footer-contenedor">
            <div class="footer-contenido">
                <!-- Columna 1: Logo y redes sociales -->
                <div class="footer-section">
                    <h3>Nunciatura</h3>
                    <div class="social-icons">
                        <!-- Twitter/X -->
                        <a href="#" aria-label="Twitter">
                            <img src="/img/X.png" alt="Twitter/X">
                        </a>
                        <!-- Instagram -->
                        <a href="#" aria-label="Instagram">
                            <img src="/img/logotipo-de-instagram.png" alt="Instagram">
                        </a>
                        <!-- YouTube -->
                        <a href="#" aria-label="YouTube">
                            <img src="/img/youtube.png" alt="YouTube">
                        </a>
                        <!-- LinkedIn -->
                        <a href="#" aria-label="LinkedIn">
                            <img src="/img/linkedin.png" alt="LinkedIn">
                        </a>
                    </div>
                </div>

                <!-- Columna 2: Contactenos -->
                <div class="footer-section">
                    <h3>Contactenos</h3>
                    <ul>
                        <li><a href="mailto:nunciaturaAdmin@gmail.com">Contactar al Administrador</a></li>
                        <!-- <li><a href="#">Preguntas Frecuentes</a></li> -->
                    </ul>
                </div>

                <!-- Columna 3: Información -->
                <div class="footer-section">
                    <h3>Información</h3>
                    <ul>
                        <li><a href="Landing_page">Tamarindo Tech</a></li>
                    </ul>
                </div>

                <!-- Columna 4: Recursos -->
                <div class="footer-section">
                    <h3>Recursos</h3>
                    <ul>
                        <!-- <li><a href="#">Tutoriales</a></li>
                            <li><a href="#">Ayuda</a></li> -->
                        <li><a href="reportes">Crear un Reporte</a></li>
                        <li><a href="reportes">Dar una Sugerencia</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="/js/emprendimientos.js"></script>
</body>

</html>